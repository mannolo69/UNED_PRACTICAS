gsave
newpath
280 450 translate
100 100 scale

1 72 div setlinewidth

% x -> x^{4}

/f {
dup mul dup mul
} def

% x -> 4x^{3}

/df {
dup dup mul mul 4 mul
} def

/pwd 0.050 def

/pixel {
gsave
setgray
newpath
moveto
pwd 2 div neg pwd 2 div neg rmoveto
pwd 0 rlineto
0 pwd rlineto
pwd neg 0 rlineto
0 pwd neg rlineto
gsave
fill
grestore
0 setgray
stroke
grestore
} def

% Pila(stack): N x0 x1

/drawcurve {
/N exch def
/x1 exch def
/x0 exch def

/h x1 x0 sub N div def

newpath
x0 dup f moveto
N {						% x y = currentpoint
currentpoint

2 copy 0 pixel

exch					% y x
dup 					% y x x
df						% y x (dy/dx)-->x -> 4x^{3}
exch					% y (dy/dx x)
h 0.3333 mul add 		% y dy/dx x1 -->/h x1 x0 sub N div def
3 1 roll				% x1 y dy/dx
0.3333 mul h mul add	% x1 y1 = y + (h/3)(dy/dx)

2 copy 0.6 pixel
% print

currentpoint			% x1 y1 x y
pop h add				% x1 y1 newx /h x1 x0 sub N div def
dup f 					% x1 y1 x y
2 copy					% x1 y1 x y x y
6 2 roll				% x y x1 y1 x y
exch dup				% x y x1 y1 y x x
df						% x y x1 y1 y x dy/dx
exch					% x y x1 y1 y dy/dx x
h 0.3333 mul sub		% x y x1 y1 y dy/dx x2
3 1 roll				% x y x1 y1 x2 y dy/dx
0.3333 mul h mul sub	% x y x1 y1 x2 y2

2 copy 0.6 pixel
% print

6 4 roll

2 copy 0 pixel
% print

curveto
} repeat
stroke
} def

gsave
0.8 setgray
newpath
-2 1 moveto
2 1 lineto
-2 0 moveto
2 0 lineto
-2 -1 moveto
2 -1 lineto
0 -2 moveto
0 2 lineto
stroke
grestore

/x -1 def
/N 200 def
/dx 2 N div def

gsave
currentlinewidth 2 mul setlinewidth
0.8 setgray
newpath
x x f moveto
N {
/x x dx add def
x x f lineto
} repeat
stroke
grestore

0   setgray

-1 1 1 drawcurve
1 1 0 pixel
grestore

showpage

